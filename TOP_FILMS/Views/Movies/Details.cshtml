@model TOP_FILMS.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<h1>Movie Details</h1>

<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.PosterUrl" class="img-fluid rounded-start" alt="@Model.Title" style="max-height: 700px; max-width: 400px;">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Title (@Model.ReleaseYear)</h5>
                <p class="card-text"><strong>Genre:</strong> @Model.Genre</p>
                <p class="card-text">@Model.Description</p>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>